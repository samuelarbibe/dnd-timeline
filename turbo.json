{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"release": {
			"dependsOn": ["^release", "^lint", "^typecheck"],
			"outputLogs": "new-only",
			"interactive": true,
			"cache": false
		},
		"build": {
			"dependsOn": ["^build"]
		},
		"test": {
			"outputs": ["coverage/**"],
			"dependsOn": []
		},
		"lint": {
			"dependsOn": []
		},
		"typecheck": {
			"dependsOn": ["^build"]
		},
		"dev": {
			"dependsOn": ["^build"],
			"cache": false,
			"persistent": true
		},
		"clean": {
			"cache": false
		}
	}
}
