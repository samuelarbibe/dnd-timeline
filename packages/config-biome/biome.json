{
	"root": false,
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"files": {
		"includes": ["**", "!dist", "!node_modules", "!**/*.css"]
	},
	"formatter": {
		"enabled": true
	},
	"assist": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"noSvgWithoutTitle": "off",
				"noStaticElementInteractions": "off"
			},
			"style": {
				"noUselessElse": "off"
			}
		}
	}
}
